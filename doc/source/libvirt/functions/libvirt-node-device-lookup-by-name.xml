<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="function.libvirt-node-device-lookup-by-name" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>libvirt_node_device_lookup_by_name</refname>
  <refpurpose>Lookup a node device by its name.</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>resource</type><methodname>libvirt_node_device_lookup_by_name</methodname>
   <methodparam><type>resource</type><parameter>connect</parameter></methodparam>
  </methodsynopsis>
  <para>
  Lookup a node device by its name.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>

    <varlistentry>
     <term><parameter>connect</parameter></term>
     <listitem>
      <para>
	  Connection resource of the hypervisor.
      </para>
     </listitem>
    </varlistentry>

   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
  Return the device resource, or &false; on failure.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>libvirt_node_device_get_name</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>
