<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="function.libvirt-get-type" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>libvirt_get_type</refname>
  <refpurpose>Get the name of the Hypervisor software used.</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>libvirt_get_type</methodname>
   <methodparam><type>resource</type><parameter>connect</parameter></methodparam>
  </methodsynopsis>
  <para>
  Get the name of the Hypervisor software used.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>

    <varlistentry>
     <term><parameter>connect</parameter></term>
     <listitem>
      <para>
      Connection resource of hypervisor, obtained from <function>libvirt_connect</function>.
      </para>
     </listitem>
    </varlistentry>

   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
  Return &false; on failure and the hypervisor's name on success.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>libvirt_connect</function></member>
    <member><function>libvirt_get_max_vcpus</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>
